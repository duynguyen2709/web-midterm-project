                          <th>Thông Tin Phụ</th>
                          <th>Cập Nhật</th>
                        </tr>
                      </thead>
                    </table>
                  </div>

                </div>

              </div>
            </div>
          </div>
        </div>

      </section>

    </div>
    <%include ../common/dialogs%>
