   <!-- Login Modal -->  
   <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">                      
          <div class="modal-body">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4>Đăng nhập/Đăng kí</h4>
            <form class="aa-login-form" action="/user/login" method="POST">
              <label for="">Tài khoản hoặc Email<span>*</span></label>
              <input type="text" name="username" placeholder="Username or email">
              <label for="">Mật khẩu<span>*</span></label>
              <input type="password" name="password" placeholder="Password">
              <button class="aa-browse-btn" type="submit" value="submit">Đăng nhập</button>
              <label for="rememberme" class="rememberme"><input type="checkbox" id="rememberme"> Ghi nhớ </label>
              <p class="aa-lost-password"><a href="" data-toggle="modal" data-dismiss="modal"  data-target="#forgot-password-modal"  >Quên mật khẩu?</a></p>
  
              <div class="aa-register-now">
                Bạn chưa có tài khoản?<a href="/user/createUser">Đăng kí ngay!</a>
              </div>
            </form>
          </div>                        
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div>    
    <div class="modal fade" id="forgot-password-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">                      
          <div class="modal-body">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4>Xác minh tài khoản</h4>
            <form class="aa-login-form" action="/user/reset" method="POST" height="50px">
              <label for="">Email<span>*</span></label>
              <input type="text" id="email" name="email" placeholder="Email">
              <button class="aa-browse-btn" type="submit" value="submit">Xác minh</button>
            </form>
          </div>                        
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div>  

 

