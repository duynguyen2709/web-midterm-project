<script type="text/javascript">
  function addproduct(image, name, price) {
    console.log(image+name+price);
    $.ajax('../my-cart/addproduct', // request url
      {
        type: 'POST',
        data: {
          image: image,
          name: name,
          price: price
        },
        success: function (data, status, xhr) { // success callback function
        }
      });
  }
</script>
